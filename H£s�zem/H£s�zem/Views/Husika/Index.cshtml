@model IEnumerable<Húsüzem.Models.Husika>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Index";
}

<h1>Termékek</h1>

@if (SignInManager.IsSignedIn(User)){

    <p>
        <a asp-action="Create">Új létrehozása</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Terméknév)
            </th>
            <th>
                Ár/Kg
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alapanyag)
            </th>
            <th>
                Gyártás ideje
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Terméknév)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ár)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alapanyag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GyártásIdeje)
            </td>


            @if (SignInManager.IsSignedIn(User)){
            
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Szerkesztés</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Törlés</a>
                </td>
            }

        </tr>
}
    </tbody>
</table>
